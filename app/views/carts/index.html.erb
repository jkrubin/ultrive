
<h1>My cart</h1>

<% @current_cart_items.each do |cart_item| %>
  <% @item_product = @catalog.where(product_id: cart_item.product_id)%>

  <p> 
    product: <%= @item_product.first.description %> 
    <%= link_to "Delete", cart_item, {method: :delete, remote: true, class: "btn"} %>
  </p>
  
<% end %>

<% @current_cart.update_price %>
<p> <%= @current_cart.id %></p>
<p><%= @current_cart.price %></p>
