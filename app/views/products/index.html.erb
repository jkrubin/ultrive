<div id= "main-container" class="container">

  <div class = "row product_row">
    <% @products.each do |product| %> 
      <div class="col-xs-6 col-sm-4" id="product">

        <%= form_for(@cart_item) do |f| %>
          <% if @cart_item.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@cart_item.errors.count, "error") %> prohibited this @cart_item from being saved:</h2>

              <ul>
                <% @cart_item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.hidden_field :product_id, value: product.product_id %>
          </div>

          <div class="field">
            <%= f.hidden_field :cart_id, value: @current_cart.id %>
          </div>

          <div class="field">
            <%= f.number_field :amount, value: 1, class: "form-control", min: 1 %>
          </div>

          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>


      </div>
    <% end %>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Products</h1>




<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Product</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.product_id %></td>
        <td><%= product.gender %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

